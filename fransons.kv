#1.8.0
#:import Assets FranSons.Assets

<SplashScreen>:
    name: "splash"
    FloatLayout:
        Image:
            source: 'assets/textures/bg1.png'
        ProgressBar:
            id: loading_bar
            size_hint_x: 0.7
            size_hint_y: None
            pos_hint: {"top":0.2, "center_x":0.5}
            max: 100
            load: root.play_load_animation()
            on_touch_up:
                root.manager.transition.direction = "left"
                root.manager.current = "main"
                print(Assets.textures)

<CreditsScreen>:
    name: "credits"
    Image:
        source: 'assets/textures/bg2.png'
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            orientation: "horizontal"
            size_hint_x: 1.0
            size_hint_y: 0.2
            Button:
                size_hint_x: 0.25
                size_hint_y: None
                text: "Back"
                on_press:
                    root.manager.transition.direction = "right"
                    root.manager.current = "main"
            Label:
                text: "Credits"
        BoxLayout:
            orientation: "vertical"
            padding: 50
            spacing: 25
            Button:
                text: "Programmers:\nEric Canam & Feilan Jiang"
                pos_hint: {"center_x":0.5}
                on_press:
                    root.ericEaster()
            Button:
                text: "Media and Customer Relations:\nWasiq Gilani"
                pos_hint: {"center_x":0.5}
            Button:
                text: "Media and Operations Supervisor:\nShivansh Luthra"
                pos_hint: {"center_x":0.5}
            
<MainMenuScreen>:
    name: "main"
    Image:
        source: 'assets/textures/bg2.png'
    BoxLayout:
        orientation: "horizontal"
        BoxLayout:
            orientation: "vertical"
            padding: 75
            spacing: 50
            Button:
                text: "Play"
                on_press:
                    root.manager.transition.direction = "left"
                    root.manager.current = "conf"
            Button:
                text: "Settings"
                on_release:
                    app.open_settings()
            Button:
                text: "Credits"
                on_press:
                    root.manager.transition.direction = "left"
                    root.manager.current = "credits"
        BoxLayout:
            orientation: "vertical"
            Image:
                source: 'assets/textures/logo.png'
            Carousel:
                size_hint_x: 1.0
                size_hint_y: 0.1
                pos_hint: {'center_x':0.5}
                loop: True
                Button:
                    size_hint_x: 1.0
                    size_hint_y: 1.0
                    text: "Theme 1"
                Button:
                    size_hint_x: 1.0
                    size_hint_y: 1.0
                    text: "Theme 2"
                Button:
                    size_hint_x: 1.0
                    size_hint_y: 1.0
                    text: "Theme 3"
                Button:
                    size_hint_x: 1.0
                    size_hint_y: 1.0
                    text: "Theme 4"

<GameConfigScreen>:
    name: "conf"
    Image:
        source: 'assets/textures/bg2.png'
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            orientation: "horizontal"
            size_hint_x: 1.0
            size_hint_y: 0.2
            Label:
                text: "Settings"
        BoxLayout:
            size_hint_x: 1.0
            size_hint_y: 0.55
            orientation: "vertical"
            padding: 50
            spacing: 25
            ToggleButton:
                text: "Some Toggle"
            ToggleButton:
                text: "T.B.D. when specifics determined"
            ToggleButton:
                text: "Another Toggle"
            ToggleButton:
                text: "This Screen Can Scroll Later"
        BoxLayout:
            orientation: "horizontal"
            size_hint_x: 1.0
            size_hint_y: 0.25
            padding: 50
            spacing: 25
            Button:
                size_hint_x: 0.25
                size_hint_y: None
                text: "Play"
                on_press:
                    root.go()
                    root.manager.transition.direction = "left"
                    root.manager.current = "play"

            Button:
                size_hint_x: 0.25
                size_hint_y: None
                text: "Back"
                on_press:
                    root.manager.transition.direction = "right"
                    root.manager.current = "main"

