<SplashScreen>:
    name: "splash"
    FloatLayout:
        ProgressBar:
            id: loading_bar
            size_hint_x: 0.7
            size_hint_y: None
            pos_hint: {"top":0.2, "center_x":0.5}
            max: 100

<CreditsScreen>:
    name: "credits"
    BoxLayout:
        orientation: "vertical"
        padding: 20
        Label:
            halign: "center"
            font_size: 32
            line_height: 1.4
            color: (0, 0, 0, 1)
            text: "Programmers:\nEric Canam & Feilan Jiang\n\nMedia and Customer Relations:\nWasiq Gilani\n\nMedia and Operations Supervisor:\nShivansh Luthra"
        BoxLayout:
            orientation: "horizontal"
            size_hint_x: 0.25
            size_hint_y: 0.2
            Button:
                text: "Back"
                on_press:
                    root.ericEaster()
                    root.manager.transition.direction = "right"
                    root.manager.current = "main"


<MainMenuScreen>:
    name: "main"
    BoxLayout:
        orientation: "horizontal"
        BoxLayout:
            orientation: "vertical"
            padding: 75
            spacing: 50
            Button:
                text: "Play"
                on_press:
                    root.manager.transition.direction = "left"
                    # root.manager.current = "conf"
                    root.manager.current = "play"
            Button:
                text: "Settings"
                on_release:
                    app.open_settings()
            Button:
                text: "Stats"
                on_press:
                    root.manager.transition.direction = "left"
                    root.manager.current = "stats"
            Button:
                text: "Credits"
                on_press:
                    root.manager.transition.direction = "left"
                    root.manager.current = "credits"
        BoxLayout:
            orientation: "vertical"
            Image:
                source: 'assets/textures/logo.png'
